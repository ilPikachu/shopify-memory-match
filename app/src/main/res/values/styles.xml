<resources>

    <!-- Base application theme. -->
    <style name="Shopify" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@color/background</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="colorPrimary">@color/polarisPrimary</item>
        <item name="colorPrimaryDark">@color/polarisPrimaryDark</item>
        <item name="colorAccent">@color/polarisAccent</item>
    </style>

    <style name="Shopify.Polaris" />

    <style name="Shopify.Polaris.Typography" parent="Shopify.Polaris">
        <item name="android:fontFamily">@string/font_family_regular</item>
        <item name="fontFamily">@string/font_family_regular</item>
        <item name="android:textColor">@color/polarisTextWhite</item>
    </style>

    <style name="Shopify.Polaris.Typography.XLarge">
        <item name="android:textSize">42sp</item>
        <item name="android:lineSpacingExtra">8sp</item>
    </style>

    <style name="Shopify.Polaris.Typography.Large">
        <item name="android:textSize">28sp</item>
        <item name="android:lineSpacingExtra">8sp</item>
    </style>

    <style name="Shopify.Polaris.Typography.Medium">
        <item name="android:textSize">26sp</item>
        <item name="android:lineSpacingExtra">8sp</item>
    </style>

    <style name="Shopify.Polaris.Typography.Small">
        <item name="android:textSize">20sp</item>
        <item name="android:lineSpacingExtra">8sp</item>
    </style>

    <style name="Shopify.Polaris.Typography.Heading">
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">8sp</item>
    </style>

    <style name="Shopify.Polaris.Typography.SubHeading">
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">8sp</item>
    </style>

    <style name="Shopify.Polaris.Typography.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:lineSpacingExtra">8sp</item>
    </style>

    <style name="ActionButton" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="android:fontFamily">@string/font_family_regular</item>
        <item name="fontFamily">@string/font_family_regular</item>
        <item name="android:textColor">@color/polarisTextWhite</item>
        <item name="backgroundTint">@color/polarisAccent</item>
    </style>

</resources>
